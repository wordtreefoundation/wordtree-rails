<h2>Setup an Archive.org Transfer</h2>

<%= form_for(@transfer, :as => 'transfer', :url => archive_org_initiate_path) do |f| %>
  <% if @transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transfer.errors.count, "error") %> prohibited this transfer from being created:</h2>

      <ul>
      <% @transfer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start_year %><br>
    <%= f.text_field :start_year %>
  </div>
  <div class="field">
    <%= f.label :end_year %><br>
    <%= f.text_field :end_year %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
