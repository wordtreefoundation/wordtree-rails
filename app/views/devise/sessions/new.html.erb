<style>
h2.form-title { margin-bottom: 1em; }
.right { text-align: right; }
.center { text-align: center; }
.btn-height { line-height: 32px; }
.space-after { margin-bottom: 1.5em; }
.icons a:hover { background-color: none; }
</style>

<div class="offset4 span4">
<h2 class="form-title">Log In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row space-after">
    <div class="span1">&nbsp;</div>
    <div class="span1 center icons"><%= link_to image_tag("/img/github-icon.png"), user_omniauth_authorize_path('github') %><br />Github</div>
    <div class="span1 center icons"><%= link_to image_tag("/img/twitter-icon.png"), user_omniauth_authorize_path('twitter') %><br />Twitter</div>
  </div>

<h2 class="form-title">Classic Log In</h2>

  <div class="row">
    <div class="span1 right"><%= f.label :email %></div>
    <div class="span2"><%= f.email_field :email, :autofocus => true %></div>
  </div>

  <div class="row">
    <div class="span1 right"><%= f.label :password %></div>
    <div class="span2"><%= f.password_field :password %></div>
  </div>

  <div class="row">
    <div class="span1">&nbsp;</div>
    <div class="span3"><%= f.submit "Log In" %>
    <% if devise_mapping.rememberable? -%>
      <span class="btn-height"><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display: inline" %></span>
    <% end -%>
    </div>
  </div>
<% end %>

<h2 class="form-title">Sign Up</h2>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create an Account", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>

</div>